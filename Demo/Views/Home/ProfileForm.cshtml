@model Demo.Models.Participant
    <form asp-controller="Home" asp-action="ProfileForm" method="post">
        <div class="card">
            <div class="card-header"><h2>Profile</h2></div>
            <div class="card-body">
                <div class="row">
                    @* Row 1 *@
                    <div class="col-4">Personal Information</div>
                    <div class="col-8">
                        <div class="row">
                            <div class="col-2"><img src="" /><i class="fa fa-user alert-dark"></i></div>
                            <div class="col-4"><button class="btn btn-dark">Upload new photo</button></div>
                            <div class="col-2"><button class="btn btn-dark">Remove</button></div>
                            <div class="col-4"></div>
                        </div>
                        <div class="row">
                            <div class="col-12">

                                <div class="form-group">
                                    <label asp-for="FirstName">First Name</label>
                                    <input asp-for="FirstName" class="form-control" placeholder="First Name">
                                </div>
                                <div class="form-group">
                                    <label asp-for="LastName" >Last Name</label>
                                    <input asp-for="LastName"  class="form-control" placeholder="Last Name">
                                </div>
                                <div class="form-group">
                                    <label asp-for="NickName" >Nick Name</label>
                                    <input asp-for="NickName"  class="form-control"  placeholder="Nick Name">
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer"><button class="btn btn-success">Save Profile</button></div>
        </div>
        <input asp-for="Id" type="hidden"/>
    </form>










